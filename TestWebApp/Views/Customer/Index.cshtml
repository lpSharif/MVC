@model System.Data.DataTable
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>Customer ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>City</th>
        <th></th>
        <th></th>
    </tr>

    @for (int i=0; i< Model.Rows.Count; i++)
    {
<tr>
    <td>@Model.Rows[i][0]</td>
    <td>@Model.Rows[i][1]</td>
    <td>@Model.Rows[i][2]</td>
    <td>@Model.Rows[i][3]</td>
    <td>@Model.Rows[i][4]</td>
    <td><a href="@Url.Action("Edit","Customer",new { @id=@Model.Rows[i][0]})">Edit</a></td>
    <td><a href="@Url.Action("Delete","Customer",new { @id=@Model.Rows[i][0]})">Delete</a></td>
</tr>
    }
</table> 
<a href="@Url.Action("Create","Customer")">Add new customer</a>


